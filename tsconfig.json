{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": false,
    "target": "es2021",
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@hahnpro/hpc-api": ["packages/api/lib/index.ts"],
    },
  },
  "exclude": ["**/dist", "**/node_modules"],
  "references": [
    {
      "path": "./packages/api/tsconfig.json",
    },
    {
      "path": "./packages/sdk/tsconfig.json",
    },
  ],
}
