{
  "name": "flow",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "changeset": "changeset",
    "format": "prettier --write . '!**/dist'",
    "lint": "eslint '*/**/*.{js,ts}'",
    "test": "jest",
    "test:local": "jest --detectOpenHandles --detectLeaks --logHeapUsage"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@types/jest": "30.0.0",
    "@types/node": "22.18.13",
    "@typescript-eslint/eslint-plugin": "8.46.2",
    "@typescript-eslint/parser": "8.46.2",
    "copyfiles": "2.4.1",
    "dotenv": "17.2.3",
    "eslint": "8.57.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "jest": "30.2.0",
    "prettier": "3.6.2",
    "ts-jest": "29.4.5",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "commonjs": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "dist/"
    ],
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-unsafe-declaration-merging": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/no-var-requires": "off",
      "no-async-promise-executor": "off",
      "no-console": "error"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 140,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.ts",
        "options": {
          "parser": "typescript"
        }
      }
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "class-transformer": "0.5.1"
      }
    },
    "overrides": {
      "debug@<3.1.0": ">=3.2.7"
    }
  }
}
