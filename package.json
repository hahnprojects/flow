{
  "name": "flow",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "changeset": "changeset",
    "format": "prettier --write . '!**/dist'",
    "lint": "eslint '*/**/*.{js,ts}'",
    "test": "jest"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^16.11.36",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "commonjs": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "dist/"
    ],
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/no-empty-function": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/no-var-requires": "off",
      "no-async-promise-executor": "off",
      "no-console": "error"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "printWidth": 140,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "*.ts",
        "options": {
          "parser": "typescript"
        }
      }
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "class-transformer": "0.5.1"
      }
    }
  }
}
